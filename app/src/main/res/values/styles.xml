<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    common styling for alert box elements-->
    <style name="aboutAlertBox" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="aboutAlertBox.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/purple_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>




    <!--    common styling for button elements-->
    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>